<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <size android:width="40dp" android:height="20dp" />
                    <solid android:color="@android:color/transparent" />
                </shape>
            </item>
            <item android:top="5dp" android:bottom="5dp" android:left="5dp" android:right="5dp">
                <shape android:shape="rectangle" >
                    <corners android:radius="15dp" />
                    <size android:width="20dp" android:height="10dp" />
                    <solid android:color="@color/browser_actions_bg_grey" /> <!-- custom color - track off -->
                    <stroke android:width="2dp" android:color="@color/browser_actions_bg_grey" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <size android:width="40dp" android:height="20dp" />
                    <solid android:color="@android:color/transparent" />
                </shape>
            </item>
            <item android:top="5dp" android:bottom="5dp" android:left="5dp" android:right="5dp">
                <shape android:shape="rectangle">
                    <corners android:radius="15dp" />
                    <size android:width="20dp" android:height="10dp" />
                    <solid android:color="@color/black" /> !-- custom color - track on-->
                    <stroke android:width="2dp" android:color="@color/black" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>