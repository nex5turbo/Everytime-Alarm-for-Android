<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:shape="oval">
            <size android:width="25dp" android:height="25dp" />
            <solid android:color="@color/browser_actions_bg_grey" /> <!-- custom color - thumb off -->
            <stroke android:width="1dp" android:color="@color/black" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="oval">
            <size android:width="25dp" android:height="25dp" />
            <solid android:color="@color/browser_actions_bg_grey" /> <!-- custom color - thumb on solid -->
            <stroke android:width="1dp" android:color="@color/black" /> <!-- custom color - thumb on border -->
        </shape>
    </item>
</selector>